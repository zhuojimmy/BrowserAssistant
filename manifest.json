{
	"manifest_version": 2,
	"name": "__MSG_extName__",
	"default_locale": "zh_CN",
	"description": "__MSG_extDesp__",
	"version": "1.1.1",
	"content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
	"background": {
		"scripts": ["res/background.js"] 
	},
	"page_action": {
		"default_icon": {
			"19": "res/pt_256.png",
			"38": "res/pt_256.png"
		},
		"default_title": "__MSG_extName__",
		"default_popup": "res/popup.html"
	},
	"content_scripts":
	[
		{
			"js": [ "res/content.js" ],
			"matches": [ "http://*/*", "https://*/*" ],
			"run_at": "document_start"
		}, 
		{
			"js": [ "res/baidu_search_content.js" ],
			"matches": [
	        	"https://www.baidu.com/*",
	        	"http://www.baidu.com/*"
	        ],
			"run_at": "document_end"
		},
		{
	        "matches": ["*://www.baidu.com/*"],
	        "css": ["res/killad.css"]
   		},
		{
	        "matches": ["*://www.so.com/*"],
	        "css": ["res/kill360ad.css"]
   		},
		{
	        "matches": ["*://www.sogou.com/*"],
	        "css": ["res/killsougouad.css"]
   		},
		{
	        "matches": ["*://cn.bing.com/*"],
	        "css": ["res/killbingad.css"]
   		}
	],
	"icons": {
		"128": "res/icon.png",
		"64": "res/icon.png",
		"32": "res/icon.png",
		"16": "res/icon.png"
	},
	"permissions" : ["tabs"]
}